<div class="card container mb-3">
    <div class="card-header col-12 row bg-light">
      <div class="col-6 float-left">
        <h5 class="mb-0">
            {{post.title}}
        </h5>
      </div>
      <div class="col-6 text-right">
      date: {{format_date post.date_created}}<br>
       user: {{post.user.username}}
      </div>
    </div>
  <div class="card-body">
    <p class="card-text">{{post.content}}</p>
  </div>
  <div class= "card-footer">
    <p>Comments</p>
    <ul class="list-group list-group-flush"></ul>
    {{#each comments as |comment| }}
    <li class="list-group-item">{{format_date comment.date_created}}<br>{{comment.comtent}}-{{comment.username}}</li>
    {{/each}}

  </div>  
</div>


 <div class="col-md-9">
    <form class="form comment-form">
      <div class="form-group">
        <label for="comment">Add Comment</label>
        <textarea class="form-control" id="comment" rows="5"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="button commentCreate" data-id="{{post.id}}">Create</button>
      </div>
    </form>
  </div>

  <script src="/js/post.js"></script>