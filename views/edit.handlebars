 <div class="card container post-list mb-3">
        <div class="card-header p-0 pt-2 row">
          <div class="col-sm-8" >
            <h6 class="mb-0 text-left p-0">
               <p>{{post.title}}</p>
            </h6>
          </div>
          <div class="col-sm-4 pr-0">
            <button class="btn btn-sm del-btn  float-right" data-id="{{post.id}}">Delete</button>
            <button class="btn btn-sm edit-btn  float-right" data-id="{{post.id}}">Save Edit</button>
          </div>
        </div>
        <div class="card-body" contenteditable="true" >
          <p id="edit{{post.id}}" class="card-text">{{post.content}}</p>
        </div>
      </div>
  

    <script src="../js/edit.js"></script>